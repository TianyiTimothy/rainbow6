@model List<Rainbow6.Models.Weapon>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Type
        </th>
        <th>
            FireMode
        </th>
        <th>
            Image
        </th>
        <th>
            Operate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

<tr>
    <td>
        <a href="~/Weapon/Details/@item.WeaponID">
            @item.Name
        </a>
    </td>
    <td>
        @item.Type
    </td>

    <td>
        @item.FireMode
    </td>
    <td>
        <img src="~/@item.ImageUrl" />
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.WeaponID }) |
        @Html.ActionLink("Details", "Details", new { id = item.WeaponID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.WeaponID })
    </td>

</tr>

    }

</table>
